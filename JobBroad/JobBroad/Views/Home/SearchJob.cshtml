@using JobBroad.Models
@model SearchModel

@{
    ViewBag.Title = "SearchJob";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="recent" role="tabpanel" aria-labelledby="recent-tab">

        @if (Model.findings.Count != 0)
        {
            <div class="row">
                @foreach (var item in Model.findings)
                {
                    <div class="job-list">
                        <div class="thumb">
                            <a href="#">
                                <img src="~/Upload/@item.JobPhoto" class="img-fluid" alt="">
                            </a>
                        </div>
                        <div class="body">
                            <div class="content">
                                <h4><a href="~/Home/ApplyJob/@item.JobId">@item.JobTitle</a></h4>
                                <div class="info">
                                    <span class="company"><a href="#"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-briefcase"><rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path></svg>@item.Company.CompName</a></span>
                                    <span class="office-location"><a href="#"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-map-pin"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>@item.Location.locationName</a></span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div>
                @ViewBag.WarnNull
            </div>
        }
    </div>
    <div class="tab-pane fade" id="feature" role="tabpanel" aria-labelledby="feature-tab">
        <div class="row">
            <div class="col-lg-6">
                <div class="job-list half-grid">
                    <div class="thumb">
                        <a href="~/Content/#">
                            <img src="images/job/company-logo-10.png" class="img-fluid" alt="">
                        </a>
                    </div>
                    <div class="body">
                        <div class="content">
                            <h4><a href="~/Content/job-listing.html">UI Designer</a></h4>
                            <div class="info">
                                <span class="company"><a href="~/Content/#"><i data-feather="briefcase"></i>Degoin</a></span>
                                <span class="office-location"><a href="~/Content/#"><i data-feather="map-pin"></i>San Francisco</a></span>
                                <span class="job-type part-time"><a href="~/Content/#"><i data-feather="clock"></i>Part Time</a></span>
                            </div>
                        </div>
                        <div class="more">
                            <div class="buttons">
                                <a href="~/Content/#" class="button">Apply Now</a>
                                <a href="~/Content/#" class="favourite"><i data-feather="heart"></i></a>
                            </div>
                            <p class="deadline">Deadline: Oct 31, 2018</p>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-lg-6">
                <div class="job-list half-grid">
                    <div class="thumb">
                        <a href="~/Content/#">
                            <img src="images/job/company-logo-3.png" class="img-fluid" alt="">
                        </a>
                    </div>
                    <div class="body">
                        <div class="content">
                            <h4><a href="~/Content/job-details.html">Land Development Marketer</a></h4>
                            <div class="info">
                                <span class="company"><a href="~/Content/#"><i data-feather="briefcase"></i>Realouse</a></span>
                                <span class="office-location"><a href="~/Content/#"><i data-feather="map-pin"></i>Washington, D.C.</a></span>
                                <span class="job-type freelance"><a href="~/Content/#"><i data-feather="clock"></i>Freelance</a></span>
                            </div>
                        </div>
                        <div class="more">
                            <div class="buttons">
                                <a href="~/Content/#" class="button">Apply Now</a>
                                <a href="~/Content/#" class="favourite"><i data-feather="heart"></i></a>
                            </div>
                            <p class="deadline">Deadline: Oct 31, 2018</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



