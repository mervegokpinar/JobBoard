@model IEnumerable<Job.Entity.Seeker>
@{
    ViewBag.Title = "ListCandidate";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="alice-bg section-padding-bottom">
    <div class="container">
        <div class="row no-gutters">
            <div class="col">
                <div class="job-listing-container">
                    <div class="filtered-job-listing-wrapper">
                       
                        <div class="job-filter-result">

                            @foreach (var item in Model)
                            {
                                <div class="job-list">
                                    <div class="thumb">
                                        <a href="#">
                                            <img src="~/Upload/@item.empPhoto" class="img-fluid" alt="">
                                        </a>
                                    </div>
                                    <div class="body">
                                        <div class="content">
                                            <h4><a href="#">@item.empName @item.empSurname</a></h4>
                                        </div>
                                    </div>
                                    <div>
                                        <a type="button" href="~/Home/ShowResume/@item.empUserId" class="button primary-bg btn-block" style="color:#ffffff; text-align:center; margin-right:10px; text-wrap:none;  min-width:100px">Show CV</a>

                                    </div>
                                </div>

                            }

                        </div>
                        
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

