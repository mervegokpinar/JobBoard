@using Job.Entity
@model Seeker
@{
    ViewBag.Title = "EditCanProf";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="alice-bg section-padding-bottom">
    <div class="container no-gliters">
        <div class="row no-gliters">
            <div class="col">
                <div class="dashboard-container">
                    <div class="dashboard-content-wrapper">
                        @using (Html.BeginForm("EditCanProf", "Home", FormMethod.Post, new { @class = "login-form", enctype = "multipart/form-data" }))
                        {
                            @Html.HiddenFor(model => model.empUserId)

                            <div class="dashboard-section upload-profile-photo">
                                <div class="update-photo">
                                    <img class="image" src="~/Upload/@Model.empPhoto" alt="" style="max-height:200px; max-width:200px" name="photo", id="photo">
                                </div>
                                <div class="file-upload">
                                    <input type="file" class="file-input">Change Avatar
                                </div>
                            </div>
                            <div class="dashboard-section basic-info-input">
                                <h4><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user-check"><path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="8.5" cy="7" r="4"></circle><polyline points="17 11 19 13 23 9"></polyline></svg>Basic Info</h4>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Full Name</label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.empName, new { @class = "form-control", @placeholder = "Personel Name" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Surname</label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.empSurname, new { @class = "form-control", @placeholder = "Personel Surname" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Email Address</label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.empEmail, new { @class = "form-control", @placeholder = "Personel Email" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Phone</label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.empPhone, new { @class = "form-control", @placeholder = "Personel Phone" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Address</label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.empAddress, new { @class = "form-control", @placeholder = "Personel Address" })
                                    </div>
                                </div>
                            </div>
                            <div class="buttons">
                                <button class="button primary-bg btn-block" style="color:#ffffff;" type="submit">Save Update</button>
                            </div>
                        }
                    </div>
                    <div class="dashboard-sidebar">
                        <div class="user-info">
                            <div class="thumb">
                                <img src="dashboard/images/user-1.jpg" class="img-fluid" alt="">
                            </div>
                            <div class="user-body">
                                <h5>Lula Wallace</h5>
                                <span></span>
                            </div>
                        </div>
                        <div class="profile-progress">
                            <div class="progress-item">
                                <div class="progress-head">
                                    <p class="progress-on">Profile</p>
                                </div>
                               
                            </div>
                        </div>
                        <div class="dashboard-menu">
                            <ul>
                                <li><i class="fas fa-check-square"></i><a href="~/Home/AppliedJobList/@ViewBag.UserId">Applied Job</a></li>                               
                            </ul>
                         
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/Content/dashboard/css/dashboard.css" rel="stylesheet" />
<script src="~/Content/dashboard/js/dashboard.js"></script>
<script src="~/Content/dashboard/js/datePicker.js"></script>
<script src="~/Content/dashboard/js/upload-input.js"></script>
<script src="https://kit.fontawesome.com/9b89592cfa.js" crossorigin="anonymous"></script>

