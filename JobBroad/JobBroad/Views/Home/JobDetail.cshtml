@using Job.Entity
@model JobO
@{
    ViewBag.Title = "JobDetail";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="alice-bg section-padding-bottom">
    <div class="container">
        <div class="job-listing-details">
            <div class="job-title-and-info">
                <div class="title">
                    <div class="thumb">
                        <img src="images/job/company-logo-1.png" class="img-fluid" alt="">
                    </div>
                    <div class="title-body">
                        <h4>@Html.DisplayFor(model => model.JobTitle)</h4>
                        <div class="info">
                            <span class="company"><a href="#"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-briefcase"><rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path></svg>@Html.DisplayFor(model => model.Company.CompName)</a></span>
                            <span class="office-location"><a href="#"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-map-pin"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>@Html.DisplayFor(model => model.Location.locationName)</a></span>
                        </div>
                    </div>
                </div>
                <div class="buttons">
                    <a class="apply" href="~/Home/ApplyJob/@Model.JobId">Apply Online</a>
                </div>
            </div>
            <div class="details-information section-padding-60">
                <div class="row">
                    <div class="col-xl-7 col-lg-8">
                        <div class="description details-section">
                            <h4><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-align-left"><line x1="17" y1="10" x2="3" y2="10"></line><line x1="21" y1="6" x2="3" y2="6"></line><line x1="21" y1="14" x2="3" y2="14"></line><line x1="17" y1="18" x2="3" y2="18"></line></svg>Job Description</h4>
                            <p>@Model.JobDetail</p>
                        </div>



                    </div>

                </div>
            </div>

        </div>

        <div class="job-apply-buttons">
            <a href="~/Home/ApplyJob/@Model.JobId" class="apply" style="margin-bottom:20px">APPLY</a>
        </div>
    </div>
</div>


